{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "background",
					"color": "#EFEFEF",
					"name": "Background"
				},
				{
					"slug": "foreground",
					"color": "#1C1C1C",
					"name": "Foreground"
				},
				{
					"slug": "primary",
					"color": "#F7E700",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#5407DF",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#861388",
					"name": "Tertiary"
				}
			]
		},
		"layout": {
			"contentSize": "60rem",
			"wideSize": "80rem"
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true,
			"spacingScale": {
				"operator": "*",
				"increment": 2.0,
				"steps": 4,
				"mediumStep": 2,
				"unit": "rem"
			}
		}
	}
}
